---
import Logo from "./Logo.astro";
---

<footer class="bg-black text-white" aria-labelledby="footer-heading">
    <h2 id="footer-heading" class="sr-only">Footer</h2>
    <div class="max-w-[1920px] mx-auto py-12 px-4 sm:px-6 lg:py-16 lg:px-12">
        <div class="xl:grid xl:grid-cols-3 xl:gap-8">
            <div class="space-y-8 xl:col-span-1">
                <a href="/" class="flex items-center gap-2">
                    <Logo class="h-10 w-auto text-white" />
                    <span class="text-2xl font-bold text-white">Elitemax</span>
                </a>
                <p class="text-gray-400 text-base max-w-sm">
                    Creando soluciones que impulsan el futuro de su negocio.
                    Innovación y confianza en cada paso.
                </p>
                <div class="flex space-x-6">
                    <!-- Socials -->
                    <a
                        href="#"
                        class="text-gray-400 hover:text-[#EAB411] transition-colors"
                    >
                        <span class="sr-only">Facebook</span>
                        <svg
                            class="h-6 w-6"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                fill-rule="evenodd"
                                d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
                                clip-rule="evenodd"></path></svg
                        >
                    </a>
                    <a
                        href="#"
                        class="text-gray-400 hover:text-[#EAB411] transition-colors"
                    >
                        <span class="sr-only">Instagram</span>
                        <svg
                            class="h-6 w-6"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                fill-rule="evenodd"
                                d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772 4.902 4.902 0 011.772-1.153c.636-.247 1.363-.416 2.427-.465C9.673 2.013 10.03 2 12.315 2zm-1.2 1.95c-2.047 0-2.55.023-3.082.046-1.144.05-1.637.23-2.022.38a2.913 2.913 0 00-1.056.684 2.91 2.91 0 00-.684 1.056c-.15.385-.33.878-.38 2.022-.023.532-.046 1.035-.046 3.082s.023 2.55.046 3.082c.05 1.144.23 1.637.38 2.022.148.384.407.828.684 1.056.276.228.72.486 1.056.684.385.15.878.33 2.022.38.532.023 1.035.046 3.082.046s2.55-.023 3.082-.046c1.144-.05 1.637-.23 2.022-.38a2.955 2.955 0 001.056-.684 2.91 2.91 0 00.684-1.056c.15-.385.33-.878.38-2.022.023-.532.046-1.035.046-3.082s-.023-2.55-.046-3.082c-.05-1.144-.23-1.637-.38-2.022a2.91 2.91 0 00-.684-1.056 2.91 2.91 0 00-1.056-.684c-.385-.15-.878-.33-2.022-.38-.532-.023-1.035-.046-3.082-.046zM12.315 6.87a5.446 5.446 0 110 10.89 5.446 5.446 0 010-10.89zm0 1.95a3.497 3.497 0 100 6.993 3.497 3.497 0 000-6.993zm5.722-4.053a1.299 1.299 0 110 2.598 1.299 1.299 0 010-2.598z"
